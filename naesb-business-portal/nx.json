{
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "lint", "test"]
      }
    }
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*"],
    "nonTest": ["!{projectRoot}/**/__tests__/*"]
  },
  "targetDefaults": {
    "build": {
      "inputs": ["nonTest", "^nonTest"],
      "dependsOn": ["^build"]
    },
    "lint": {
      "inputs": ["default", "^nonTest"],
      "dependsOn": ["build"]
    },
    "test": {
      "inputs": ["default", "^nonTest"],
      "dependsOn": ["^build"]
    },
    "cicd": {
      "dependsOn": ["build", "lint", "test"]
    }
  }
}
