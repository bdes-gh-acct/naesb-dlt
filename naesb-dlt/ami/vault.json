{
  "min_packer_version": "1.5.4",
  "variables": {
    "aws_region": "us-east-1",
    "vault_version": "1.20.1",
    "consul_module_version": "v0.11.0",
    "consul_version": "1.21.3",
    "consul_download_url": "{{env `CONSUL_DOWNLOAD_URL`}}",
    "vault_download_url": "{{env `VAULT_DOWNLOAD_URL`}}",
    "install_auth_signing_script": "true",
    "ca_public_key_path": "{{template_dir}}/keys/consul-agent-ca.pem",
    "tls_public_key_path": "{{template_dir}}/keys/dc1-client-consul-1.pem",
    "tls_private_key_path": "{{template_dir}}/keys/dc1-client-consul-1-key.pem"
  },
  "builders": [
    {
      "name": "ubuntu24-ami",
      "vpc_id": "vpc-016db0b3da943c5a1",
      "subnet_id": "subnet-0d2e9f1cb9c479b60",
      "ami_name": "NAESB-DLT-vault-consul-ubuntu-24.04-{{isotime | clean_resource_name}}-{{uuid}}",
      "ami_description": "An Ubuntu 24.04 AMI that has Vault and Consul installed.",
      "instance_type": "t2.micro",
      "region": "{{user `aws_region`}}",
      "type": "amazon-ebs",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "architecture": "x86_64",
          "name": "ubuntu/images/hvm-ssd-gp3/ubuntu-noble-24.04-amd64-server-*",
          "block-device-mapping.volume-type": "gp3",
          "root-device-type": "ebs"
        },
        "owners": ["099720109477"],
        "most_recent": true
      },
      "ssh_username": "ubuntu"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": ["mkdir -p /tmp/terraform-aws-vault/modules"]
    },
    {
      "type": "file",
      "source": "{{template_dir}}/modules/",
      "destination": "/tmp/terraform-aws-vault/modules",
      "pause_before": "30s"
    },
    {
      "type": "shell",
      "inline": [
        "chmod 755 /tmp/terraform-aws-vault/modules/install-consul -R",
        "chmod 755 /tmp/terraform-aws-vault/modules/run-consul -R",
        "chmod 755 /tmp/terraform-aws-vault/modules/install-vault -R",
        "chmod 755 /tmp/terraform-aws-vault/modules/run-vault -R",
        "chmod 755 /tmp/terraform-aws-vault/modules/update-certificate-store -R",
        "chmod 755 /tmp/terraform-aws-vault/modules/setup-systemd-resolved -R"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "if test -n \"{{user `vault_download_url`}}\"; then",
        " /tmp/terraform-aws-vault/modules/install-vault/install-vault --download-url {{user `vault_download_url`}};",
        "else",
        " /tmp/terraform-aws-vault/modules/install-vault/install-vault --version {{user `vault_version`}};",
        "fi"
      ]
    },
    {
      "type": "file",
      "source": "{{template_dir}}/auth/sign-request.py",
      "destination": "/tmp/sign-request.py"
    },
    {
      "type": "file",
      "source": "{{user `ca_public_key_path`}}",
      "destination": "/tmp/ca.crt.pem"
    },
    {
      "type": "file",
      "source": "{{user `tls_public_key_path`}}",
      "destination": "/tmp/consul.crt.pem"
    },
    {
      "type": "file",
      "source": "{{user `tls_public_key_path`}}",
      "destination": "/tmp/vault.crt.pem"
    },
    {
      "type": "file",
      "source": "{{user `tls_private_key_path`}}",
      "destination": "/tmp/vault.key.pem"
    },
    {
      "type": "file",
      "source": "{{user `tls_private_key_path`}}",
      "destination": "/tmp/consul.key.pem"
    },
    {
      "type": "shell",
      "inline": [
        "if [[ '{{user `install_auth_signing_script`}}' == 'true' ]]; then",
        "sudo mv /tmp/sign-request.py /opt/vault/scripts/",
        "else",
        "sudo rm /tmp/sign-request.py",
        "fi",
        "sudo mv /tmp/ca.crt.pem /opt/vault/tls/",
        "sudo mv /tmp/vault.crt.pem /opt/vault/tls/",
        "sudo mv /tmp/vault.key.pem /opt/vault/tls/",
        "sudo chown -R vault:vault /opt/vault/tls/",
        "sudo chmod -R 600 /opt/vault/tls",
        "sudo chmod 700 /opt/vault/tls",
        "sudo /tmp/terraform-aws-vault/modules/update-certificate-store/update-certificate-store --cert-file-path /opt/vault/tls/ca.crt.pem"
      ],
      "inline_shebang": "/bin/bash -e"
    },
    {
    "type": "shell",
    "inline": [
      "sudo apt-get install -y git",
      "if [[ '{{user `install_auth_signing_script`}}' == 'true' ]]; then",
      "sudo apt-get install -y python3-pip",
      "LC_ALL=C && sudo pip install --break-system-packages boto3",
      "fi"
    ],
    "inline_shebang": "/bin/bash -e",
    "only": ["ubuntu24-ami"]
    },
    {
      "type": "file",
      "source": "{{user `ca_public_key_path`}}",
      "destination": "/tmp/ca.crt.pem"
    },
    {
      "type": "shell",
      "inline": [
        "rm /tmp/LICENSE.txt",
        "/tmp/terraform-aws-vault/modules/install-consul/install-consul --version {{user `consul_version`}} --ca-file-path /tmp/ca.crt.pem --cert-file-path /tmp/consul.crt.pem --key-file-path /tmp/consul.key.pem"
      ],
      "pause_before": "30s"
    },
    {
      "type": "shell",
      "inline": [
        "/tmp/terraform-aws-vault/modules/setup-systemd-resolved/setup-systemd-resolved"
      ]
    }
  ]
}
