{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "baseUrl": "src",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@assets/*": ["./assets/*"],
      "@common/*": ["./common/*"],
      "@pages/*": ["./pages/*"],
      "@query/*": ["./query/*"],
      "@store/*": ["./store/*"],
      "@service/*": ["./service/*"],
      "@testUtils": ["./testUtils"],
      "@utils": ["./utils"]
    }
  },
  "include": ["src"]
}
